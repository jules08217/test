<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="385" Margin="22,10,0,0" VerticalAlignment="Top" Width="521">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" >
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="{Binding FirstName}" Width="100"></TextBlock>
                            <TextBlock Text="{Binding MiddleName}" Width="100"></TextBlock>
                            <TextBlock Text="{Binding LastName}" Width="100"></TextBlock>
                            <TextBlock Text="{Binding DealShare}" Width="50"></TextBlock>
                        </StackPanel>
                        <Button x:Name="DeleteButton" Content="Удалить" Width="70" Margin="0,0,10,0"></Button>
                        <Button x:Name="ChangeButton" Content="Изменить" Width="70"></Button>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBox x:Name="fNameTextBox" HorizontalAlignment="Left" Height="23" Margin="569,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196"/>
        <TextBox x:Name="mNameTextBox" HorizontalAlignment="Left" Height="23" Margin="569,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196"/>
        <TextBox x:Name="lNameTextBox" HorizontalAlignment="Left" Height="23" Margin="569,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196"/>
        <TextBox x:Name="dShareTextBox" HorizontalAlignment="Left" Height="23" Margin="569,205,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196"/>
        <Button x:Name="AddButton" Content="Добавить" HorizontalAlignment="Left" Margin="635,265,0,0" VerticalAlignment="Top" Width="75" Click="AddButton_Click"/>
        <Button x:Name="SaveButton" Content="Сохранить" HorizontalAlignment="Left" Margin="635,308,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
